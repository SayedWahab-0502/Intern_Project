<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Send_request">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:weightSum="2"
                android:layout_weight="0.5">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_weight="1.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I want to replace the\nbath shower"
                        android:textColor="@color/royal_blue"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skill Required"
                        android:textSize="13sp"
                        android:textColor="@color/new_dark_color">

                    </TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:paddingVertical="5dp">


                        <Button
                            android:layout_width="77dp"
                            android:layout_height="23dp"
                            android:text="Plumbing"
                            android:textAllCaps="false"
                            android:textSize="11sp"
                            android:layout_weight="1"
                            android:textColor="@color/royal_blue"
                            android:background="@drawable/call_chat">

                        </Button>



                        <Button
                            android:layout_width="77dp"
                            android:layout_height="23dp"
                            android:text="pipe worker"
                            android:textAllCaps="false"
                            android:textSize="11sp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="5dp"
                            android:textColor="@color/royal_blue"
                            android:background="@drawable/call_chat">

                        </Button>


                        <Button
                            android:layout_width="77dp"
                            android:layout_height="23dp"
                            android:text="ipsum"
                            android:textAllCaps="false"
                            android:textSize="11sp"
                            android:layout_weight="1"
                            android:textColor="@color/royal_blue"
                            android:background="@drawable/call_chat">

                        </Button>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.2">


                    <Button
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:text=" Bidding"
                        android:drawableLeft="@drawable/ic_auction"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/royal_blue"
                       android:paddingLeft="15dp"
                        android:textAlignment="viewStart"
                        android:background="@drawable/call_chat"
                        android:layout_gravity="end">

                    </Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$50-$120"
                        android:textColor="@color/colorblack"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        android:textColor="@color/new_dark_color"
                        android:textSize="8sp"
                        android:layout_gravity="end"
                        android:paddingRight="5dp">

                    </TextView>


                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/royal_blue"
                    android:layout_marginTop="5dp">

                </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Need"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorblack"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/text_ongoing"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/background_stroke"
                android:paddingVertical="3dp"
                android:paddingHorizontal="2dp"
                android:textColor="@color/new_dark_color">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Time"
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:layout_marginTop="8dp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_textview"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/royal_blue"
                android:layout_gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06/07/2019"
                    android:textColor="@color/white">

                </TextView>


                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/white"></RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:05 PM"
                    android:textColor="@color/white">

                </TextView>


            </LinearLayout>






            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="See attached file"
                    android:textColor="@color/royal_blue"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical">

                </TextView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_down_arrow"></ImageView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/royal_blue"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp">

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimum Charge"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/new_dark_color"></TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$40"
                    android:textColor="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="bottom"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:textColor="@color/royal_blue"
                    android:layout_weight="0.1"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_down_arrow_blue"></TextView>

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/royal_blue"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp">

            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Availability"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/new_dark_color"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 hour"
                    android:textColor="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="bottom"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textColor="@color/royal_blue"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:textSize="15sp"></TextView>

            </LinearLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/royal_blue"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp">

            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Contact no"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/new_dark_color"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="009906482166"
                    android:textColor="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="bottom"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textColor="@color/royal_blue"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:textSize="15sp"></TextView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/royal_blue"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp">

            </RelativeLayout>


            <Button
                android:layout_width="wrap_content"
                android:id="@+id/summary"
                android:layout_height="35dp"
                android:text="Send request"
                android:paddingHorizontal="50dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:background="@drawable/button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">
            </Button>


            </LinearLayout>



        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/bottom_nav_background"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:theme="@style/Widget.BottomNavigationView"
        />


</RelativeLayout>