<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Transaction">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative_layoutmain">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/linear1"
                android:orientation="vertical"
                android:background="@drawable/background_stroke"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:text="$150"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:textColor="@color/royal_blue"
                    android:textStyle="bold"
                    >
                </TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:text="Personal balance"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorblack"
                    >

                </TextView>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview3"
                android:text="Overview"
                android:textColor="@color/royal_blue"
                android:textSize="15sp"
                android:layout_below="@+id/linear1"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp">
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear2"
                android:orientation="vertical"
                android:background="@color/lightcolor"
                android:layout_below="@+id/textview3"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/lightcolor"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/earning"
                        android:text="Earning in may"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:layout_weight="1.5"
                        android:textStyle="normal">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/earning2"
                        android:text="$120.00"
                        android:layout_weight="0.5"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:paddingRight="10dp">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/lightcolor"
                    android:paddingBottom="13dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/work"
                        android:text="Completed works"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:layout_weight="1.5"
                        android:textStyle="normal">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/work1"
                        android:text="25"
                        android:layout_weight="0.5"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:paddingRight="10dp"
                        >
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightcolor"
                    android:orientation="horizontal"
                    android:paddingBottom="13dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Active work"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:layout_weight="1.5"
                        android:textStyle="normal"></TextView>

                    <TextView
                        android:id="@+id/active1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="00"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:textAlignment="viewEnd"
                        android:paddingRight="10dp"
                        ></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/lightcolor"
                    android:paddingBottom="13dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/withdrawal"
                        android:text="Available for withdrawal"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_weight="1.5">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/withdrawal1"
                        android:text="$150.00"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorblack"
                        android:textSize="15sp"
                        android:layout_weight="0.5"
                        android:textAlignment="viewEnd"
                        android:paddingRight="10dp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textviewnew"
                android:text="Revenues"
                android:textColor="@color/royal_blue"
                android:textSize="15sp"
                android:layout_below="@+id/linear2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold">
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.4px"
                android:background="@color/colorblack"
                android:layout_below="@+id/textviewnew"
                android:layout_marginTop="5dp"
                android:id="@+id/line_layout"></RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/line_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:text="Cancelled works"
                        android:textSize="15sp"
                        android:layout_weight="2"></TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="00"
                        android:textColor="@color/colorblack"
                        android:textAlignment="viewEnd"></TextView>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_expand"
                        android:layout_weight="0.5"
                        android:scaleType="fitEnd">

                    </ImageView>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EDACACAC">
                </RelativeLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:text="Pending clearance"
                        android:textSize="15sp"
                        android:layout_weight="2"></TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$80"
                        android:textColor="@color/royal_blue"
                        android:layout_weight="0.5"
                        android:textAlignment="viewEnd"
                        ></TextView>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_expand"
                        android:layout_weight="0.5"
                        android:scaleType="fitEnd">

                    </ImageView>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EDACACAC">
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:text="Withdrawn"
                        android:textSize="15sp"
                        android:layout_weight="2.2"></TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$220"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/royal_blue"
                        android:layout_weight="0.4"
                        ></TextView>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_expand"
                        android:layout_weight="0.4"
                        android:scaleType="fitEnd">

                    </ImageView>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EDACACAC">
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:text="@string/share_earn"
                        android:textSize="15sp"
                        android:layout_weight="1.5"></TextView>



                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_expand"
                        android:layout_weight="0.5"
                        android:scaleType="fitEnd">

                    </ImageView>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EDACACAC">
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>






    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/bottom_nav_background"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:theme="@style/Widget.BottomNavigationView"
        />





</RelativeLayout>