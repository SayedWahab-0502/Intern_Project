<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OnGoingRequest">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="15dp"
            android:background="@color/royal_blue"
            android:id="@+id/linear_id1">

            <Button
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:background="@drawable/active_pending_border"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"
                android:text="Pending Tasks"
                android:textAllCaps="false"
                android:textColor="@color/orange_main3"
                android:textSize="13sp">

            </Button>

            <Button
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="Active Tasks"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/active_pending_border"
                android:textColor="@color/colorbgicons"
                android:backgroundTintMode="src_over"
                android:backgroundTint="#E9EDD9D9"
                android:layout_marginLeft="25dp"
                android:id="@+id/active_tasks_activity"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_id1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/linear_id1"
                    android:layout_marginTop="20dp"
                    android:id="@+id/linear_id2"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/background_stroke">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:weightSum="4">



                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/man"
                            android:layout_weight="0.5">

                        </de.hdodenhof.circleimageview.CircleImageView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Souliman Mohammed"
                                android:textSize="14sp"
                                android:textColor="@color/colorblack"
                                ></TextView>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginVertical="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_woodwork222"
                                    android:background="@color/royal_blue"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Task details"
                                    android:textSize="12sp"
                                    android:textColor="@color/royal_blue"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center_vertical">

                                </TextView>

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Accepted by you"
                                android:textColor="@color/royal_blue"
                                android:textSize="12sp"></TextView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Pending for 2 days"
                                android:textColor="#E34717"
                                android:textSize="12sp"></TextView>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_auction"
                        android:layout_weight="0.5">

                        </ImageView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_ongoing"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:textColor="@color/new_dark_color"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="5dp"
                        android:background="@drawable/background_textview"
                        android:paddingVertical="5dp"></TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp">

                        <Button
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:text="Send a reminder"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/royal_blue"
                            android:background="@drawable/edittext_bg"></Button>

                        <Button
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:text="View order"
                            android:textSize="12sp"
                            android:layout_marginLeft="30dp"
                            android:textAllCaps="false"
                            android:textColor="@color/royal_blue"
                            android:background="@drawable/edittext_bg"></Button>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/linear_id2"
                    android:layout_marginTop="15dp"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/background_stroke">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:weightSum="4"
                        >



                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/man"
                            android:layout_weight="0.5">

                        </de.hdodenhof.circleimageview.CircleImageView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Souliman Mohammed"
                                android:textSize="14sp"
                                android:textColor="@color/colorblack"
                                ></TextView>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginVertical="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_woodwork222"
                                    android:background="@color/royal_blue"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Task details"
                                    android:textSize="12sp"
                                    android:textColor="@color/royal_blue"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center_vertical">

                                </TextView>

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Accepted by you"
                                android:textColor="@color/royal_blue"
                                android:textSize="12sp"></TextView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Pending for 2 days"
                                android:textColor="#E34717"
                                android:textSize="12sp"></TextView>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_auction"
                            android:layout_weight="0.5">

                        </ImageView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_ongoing"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:textColor="@color/new_dark_color"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:background="@drawable/background_textview"></TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp">

                        <Button
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:text="Send a reminder"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/royal_blue"
                            android:background="@drawable/edittext_bg"></Button>

                        <Button
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:text="View order"
                            android:textSize="12sp"
                            android:layout_marginLeft="30dp"
                            android:textAllCaps="false"
                            android:textColor="@color/royal_blue"
                            android:background="@drawable/edittext_bg"></Button>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/bottom_nav_background"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:theme="@style/Widget.BottomNavigationView" />



</RelativeLayout>