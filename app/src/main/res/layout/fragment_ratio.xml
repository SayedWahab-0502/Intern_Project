<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RatioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="100dp"  >




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted Ratio"
            android:textSize="15sp"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_button"
            android:backgroundTintMode="src_over"
            android:backgroundTint="#E5EAFF"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textColor="@color/royal_blue"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_weight="0.5"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.5"
                android:text="Total assigned works for seleted months"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancellation Ratio"
            android:textSize="15sp"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_button"
            android:backgroundTintMode="src_over"
            android:backgroundTint="#E5EAFF"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:text="[Target is : %]"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/royal_blue"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                android:textStyle="bold"

                android:layout_weight="0.5"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.5"
                android:text="@string/you_have_received"
                android:textAlignment="center"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Completion"
            android:textSize="15sp"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_button"
            android:backgroundTintMode="src_over"
            android:backgroundTint="#E5EAFF"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:text="[Target is : %]"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textColor="@color/royal_blue"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:background="@drawable/background_eighty_ratio"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_weight="0.5"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.5"
                android:text="@string/long_text_performance"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rejected Ratio"
            android:textSize="15sp"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_button"
            android:backgroundTintMode="src_over"
            android:backgroundTint="#E5EAFF"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:text="[Target is : 0%]"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="0"
                android:textColor="@color/royal_blue"
                android:textSize="28sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.5"
                android:text="@string/long_text_performance"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Over Due"
            android:textSize="15sp"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_button"
            android:backgroundTintMode="src_over"
            android:backgroundTint="#E5EAFF"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:text="[Target is : 0%]"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/royal_blue"
                android:gravity="center_horizontal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_weight="0.5"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.5"
                android:text="@string/long_text_performance"
                android:textColor="@color/new_dark_color"
                android:textSize="12sp"></TextView>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textSize="15sp"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:layout_marginTop="25dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/royal_blue"
            android:paddingHorizontal="30dp"
            android:weightSum="5"
            android:id="@+id/statistic">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned \nworks"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_weight="1"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled \norder"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_weight="1"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed \norder"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_weight="1"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejected \norder"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_weight="1"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Over \ndue"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"></TextView>


        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:id="@+id/id_eighty_linear">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textSize="12sp"
                    android:textColor="@color/royal_blue"
                    android:id="@+id/eighty"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"></TextView>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="center_vertical"></RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="2"
                android:id="@+id/id_sixty_linear"
                android:layout_below="@+id/id_eighty_linear">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textSize="12sp"
                    android:textColor="@color/royal_blue"
                    android:id="@+id/eighty"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"></TextView>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="center_vertical"></RelativeLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="2"
                android:id="@+id/id_forty_linear"
                android:layout_below="@+id/id_sixty_linear">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textSize="12sp"
                    android:textColor="@color/royal_blue"
                    android:id="@+id/eighty"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"></TextView>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="center_vertical"></RelativeLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="2"
                android:id="@+id/id_twenty_linear"
                android:layout_below="@+id/id_forty_linear">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="12sp"
                    android:textColor="@color/royal_blue"
                    android:id="@+id/eighty"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"></TextView>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="center_vertical"></RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:weightSum="2"
                android:id="@+id/id_zero_linear"
                android:layout_below="@+id/id_twenty_linear">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="12sp"
                    android:textColor="@color/royal_blue"
                    android:id="@+id/eighty"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"></TextView>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/royal_blue"
                    android:layout_weight="1.9"
                    android:layout_gravity="center_vertical"></RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDACACAC"
                android:layout_below="@id/id_zero_linear"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_vertical"></RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="40dp"
                android:layout_alignParentBottom="true"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="25dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="150dp"
                        android:background="@color/royal_blue"
                        android:layout_centerInParent="true">

                    </RelativeLayout>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="35dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:background="@color/royal_blue"
                        android:layout_centerInParent="true">

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="170dp"
                        android:background="@color/royal_blue"
                        android:layout_centerInParent="true">

                    </RelativeLayout>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="70dp"
                        android:background="@color/royal_blue"
                        android:layout_centerInParent="true">

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:background="@color/royal_blue"
                        android:layout_centerInParent="true">

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>




        </RelativeLayout>


    </LinearLayout>

</ScrollView>


